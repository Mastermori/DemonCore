{
  "name": "demonass",
  "displayName": "DemonAssembler",
  "description": "Language support for the assembler language of the demon-core processor",
  "publisher": "mastermori",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Themes",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:demonass.helloWorld",
    "onLanguage:demonass"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "demonass.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "demonass",
        "aliases": [
          "Demon Assembler",
          "demonass"
        ],
        "extensions": [
          ".dasmb",
          ".dass",
          ".dasm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "demonass",
        "scopeName": "source.demonass",
        "path": "./syntaxes/demonass.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "demonass",
        "uiTheme": "vs-dark",
        "path": "./themes/demonass-color-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "demonass",
        "path": "./snippets.json"
      }
    ],
    "configuration": {
      "type": "string",
      "title": "DemonAssembler",
      "properties": {
        "demonass.pythonPath": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "/usr/local/bin",
          "pattern": "(\\\\?([^\\/]*[\\/])*)([^\\/]+)$",
          "description": "The filesystem path to the Python3 executable."
        },
        "demonass.serverPath": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "",
          "pattern": "(\\\\?([^\\/]*[\\/])*)([^\\/]+)$",
          "description": "The filesystem path to the demonass server executable."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}